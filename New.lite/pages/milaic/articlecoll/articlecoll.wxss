/* pages/milaic/articlecoll/articlecoll.wxss */

page {
  background: rgb(245, 245, 245);
}

.line0 {
  background: rgb(216, 216, 216);
  width: 100%;
  height: 2rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}

.view0000 {
  width: 100%;
  position: relative;
}

.list {
  width: 100%;
  display: flex;
  align-items: center;
  height: 172rpx;
  background: white;
  margin-bottom: 20rpx;
}

.image {
  width: 150rpx;
  height: 112rpx;
  margin-left: 32rpx;
  margin-right: 36rpx;
}

.rightview {
  width: 480rpx;
  height: 112rpx;
  padding-left: 32rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title {
  font-size: 26rpx;
  color: rgb(33, 36, 42);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.timeview {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.time {
  font-size: 22rpx;
  color: rgb(153, 153, 153);
}

.del {
  font-size: 20rpx;
  color: rgb(254, 13, 20);
  padding-top: 8rpx;
  padding-bottom: 8rpx;
  padding-left: 12rpx;
  padding-right: 12rpx;
  border: 4rpx solid rgb(254, 13, 20);
  position: absolute;
  bottom: 30rpx;
  right: 34rpx;
  z-index: 1;
}

.text {
  position: absolute;
  width: 100%;
  text-align: center;
  top: 30rpx;
  left: 0rpx;
  font-size: 20rpx;
  z-index: -1;
}

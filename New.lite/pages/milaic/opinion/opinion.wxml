<!--pages/milaic/opinion/opinion.wxml-->
<form bindsubmit="formSubmit" bindreset="formReset">
<view class="line2"> 反馈内容</view>
  <view class="viewtextarea">
    <textarea name="content" class="textarea" maxlength="1000" placeholder-class="textarea_placeholder" placeholder="请输入您的反馈内容" />
  </view>
  <view class="line2"> 联系方式</view>
    <view class="viewtextarea">
    <input name="tel"  class="textarea1"  placeholder="请输入您的电话号码或邮箱，方便我们联系您" />
  </view>
<button formType="submit" class="button">提交反馈</button>
</form>